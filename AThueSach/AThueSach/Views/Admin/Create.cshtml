@model AThueSach.Models.AdminUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h5 class="card-header" style="text-align:center">Thêm Nhân Viên</h5>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="mt-2 mb-3">
                            MÃ NHÂN VIÊN
                            @Html.EditorFor(model => model.IDNV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.IDNV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="mt-2 mb-3">
                            HỌ TÊN NHÂN VIÊN

                            @Html.EditorFor(model => model.NameNV, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.NameNV, "", new { @class = "text-danger" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="mt-2 mb-3">
                            USERNAME

                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="mt-2 mb-3">
                            MẬT KHẨU

                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-lg" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="mt-2 mb-3">
                            CHỨC VỤ
                            @Html.DropDownListFor(model => model.Department, new SelectList(ViewBag.listcv), new { @class = "form-control form-control-lg" })
                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })

                        </div>
                    </div>



                    <div class="form-group" style="width: 300px; margin-left: auto; margin-right: auto;">

                        <input type="submit" value="Tạo" class="btn btn-primary" />

                        @Html.ActionLink("Trở Lại", "Index", null, new { @class = "btn btn-outline-secondary" })

                    </div>
                </div>
            }

        </div>
    </div>
</div>
