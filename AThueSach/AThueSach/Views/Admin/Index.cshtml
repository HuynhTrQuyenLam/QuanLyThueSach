@model IEnumerable<AThueSach.Models.AdminUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card" style="margin: 24px">
    <table>
        <thead>
            <tr>
                <th>
                    <h5 class="card-header" style="margin-right: 10%">Danh Sách Nhân Viên</h5>
                </th>
                <th style="text-align:right ; padding-right:28px">
                    <p>
                        @Html.ActionLink("Thêm", "Create", null, new { @class = "btn btn-outline-primary" })
                    </p>
                </th>
            </tr>
        </thead>
    </table>

    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Mã Nhân Viên</th>
                        <th>Họ Tên Nhân Viên</th>
                        @*<th>Username</th>
                            <th>Mật Khẩu</th>*@
                        <th>Chức Vụ</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i>
                                <strong>@Html.DisplayFor(modelItem => item.Id)</strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i>
                                <strong>@Html.DisplayFor(modelItem => item.IDNV)</strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i>
                                <strong>
                                    @Html.DisplayFor(modelItem => item.NameNV)
                                </strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i>
                                <strong>
                                    @Html.DisplayFor(modelItem => item.Department)
                                </strong>
                            </td>
                            <td>
                                @Html.ActionLink("Sửa", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                @*@Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })*@
                            </td>

                        </tr>
                    }

            </table>
        </div>
    </div>
</div>
