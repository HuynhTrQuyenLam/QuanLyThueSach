
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4">Tài khoản</h4>

        <div class="row">
            <div class="col-md-12">
                
                <div class="card mb-4">
                    <h5 class="card-header">Thông tin tài khoản</h5>
                    <!-- Account -->
                    <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                            <img src="~/Content/Images/user.png"
                                 alt="user-avatar"
                                 class="d-block rounded"
                                 height="100"
                                 width="100"
                                 id="uploadedAvatar" />
                            <div >
                                <label for="upload" class="primary me-2 mb-4" tabindex="0">
                                    @{ var user = (AThueSach.Models.AdminUser)HttpContext.Current.Session["user"]; }
                                    <span class="d-none d-sm-block"><strong>@user.Department</strong></span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <hr class="my-0" />
                    <div class="card-body">
                        <form id="formAccountSettings" method="POST" onsubmit="return false">
                            <div class="row">
                                <div class="mb-3 col-md-6">
                                    <label class="form-label">ID nhân viên</label>
                                    <input class="form-control"
                                           disabled="disabled"
                                           value="@user.IDNV" />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Tên nhân viên</label>
                                    <input class="form-control"
                                           disabled="disabled"
                                           value="@user.NameNV" />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Username</label>
                                    <input class="form-control"
                                           disabled="disabled"
                                           value="@user.Username" />
                                </div>
                                <div class="mb-3 col-md-6">
                                    <label for="firstName" class="form-label">Password</label>
                                    <input class="form-control"
                                           disabled="disabled"
                                           value="@user.Password" />
                                </div>

                            </div>
                            <div class="mt-2">
                                <button type="submit" class="btn btn-primary me-2">Save changes</button>
                                <button type="reset" class="btn btn-outline-secondary">Cancel</button>
                            </div>
                        </form>
                    </div>
                    <!-- /Account -->
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->

    <div class="content-backdrop fade"></div>
</div>
