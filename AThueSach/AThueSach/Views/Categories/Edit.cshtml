@model AThueSach.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Chỉnh sửa sách</title>
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h5 class="card-header" style="text-align:center">Thêm Sách</h5>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="card-body">
                <div class="mt-2 mb-3">
                    <h6>Mã đầu sách</h6>

                    @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã đầu sách" } })
                    @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                </div>

                <div class="mt-2 mb-3">
                    <h6>Tên đầu sách</h6>
                    @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đầu sách" } })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                </div>
                <div style="text-align:right">
                    <input type="submit" value="Cập nhật" class="btn btn-primary" />
                    <div class="btn btn-outline-dark">
                        @Html.ActionLink("Quay lại", "Index")
                    </div>
                </div>
            </div>
        }
    </div>
</div>


