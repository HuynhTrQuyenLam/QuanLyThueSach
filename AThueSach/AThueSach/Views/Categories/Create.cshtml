@model AThueSach.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Thêm sách</title>
<!-- Input Sizing -->
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h5 class="card-header" style="text-align:center">Thêm Sách</h5>
        @using (Html.BeginForm()) //Biểu mẫu gửi đến controller
        {
            @Html.AntiForgeryToken() //đảm bảo tính xác thực
            @Html.ValidationSummary(true, "", new { @class = "text-danger" }) //thông báo lỗi

    <div class="card-body">
        <div class="mt-2 mb-3">
            <h6>Mã đầu sách</h6>
            @Html.EditorFor(model => model.IDCate, //tạo dữ liệu vào IDCate
                    new {htmlAttributes = new { @class = "form-control", placeholder = "Mã đầu sách" }  }) //thêm thuộc tính của HTML
            @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" }) //Trả về tb lỗi
        </div>

        <div class="mt-2 mb-3">
            <h6>Tên đầu sách</h6>
            @Html.EditorFor(model => model.NameCate,
                    new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đầu sách" } })
            @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
        </div>

        <div style="text-align:right">
            <input type="submit" value="Tạo mới" class="btn btn-primary" />
            <div class="btn btn-outline-dark">
                @Html.ActionLink("Quay lại", "Index") //Chuyển trang
            </div>
        </div>

    </div>
        }
    </div>
</div>

