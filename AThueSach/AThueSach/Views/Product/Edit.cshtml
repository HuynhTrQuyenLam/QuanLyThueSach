@model AThueSach.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>Chỉnh sửa sách</title>
<div class="col-md-6" style="margin:25px; width:96%">
    <div class="card mb-4">
        <h5 class="card-header" style="text-align:center">Thêm Sách</h5>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProductID)
    <div class="card-body">
        <div class="mt-2 mb-3">
            <h6>Tên sách</h6>
            @Html.EditorFor(model => model.NamePro, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã đầu sách" } })
            @Html.ValidationMessageFor(model => model.NamePro, "", new { @class = "text-danger" })
        </div>
        <div class="mt-2 mb-3">
            <textarea style="padding-bottom: 50px; padding-top: 50px" id="basic-default-message" class="form-control">@Model.DecriptionPro</textarea>
            @Html.ValidationMessageFor(model => model.DecriptionPro, "", new { @class = "textarea" })
        </div>
        <div class="mt-2 mb-3">
            <h6>Đầu sách</h6>
            @Html.DropDownListFor(model => model.Category, (SelectList)ViewBag.listCategory, new { @class = "form-select", id = "exampleFormControlSelect1", aria_label = "Default select example" })
            @Html.ValidationMessageFor(model => model.Category, "", new { @class = "text-danger" })
        </div>
        <div class="mt-2 mb-3">
            <h6>Số lượng</h6>
            @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đầu sách" } })
            @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
        </div>
        <div class="mt-2 mb-3">
            <h6>Giá sách</h6>
            @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đầu sách" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
        <div class="mt-2 mb-3">
            <h6>Giá thuê</h6>
            @Html.EditorFor(model => model.PriceHire, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên đầu sách" } })
            @Html.ValidationMessageFor(model => model.PriceHire, "", new { @class = "text-danger" })
        </div>
        <div class="mt-2 mb-3">
            <h6>Hình ảnh</h6>
            <img src="~/Content/Images/@Model.ImagePro" style="height: 200px; width:150px" />
        </div>
        <div class="mb-3">
            <h6>Trạng thái</h6>
            <select name="StatusPro">
                <option value="0">Có sẵn</option>
                <option value="1">Đang cho thuê</option>
                <option value="2">Mất</option>
            </select>
        </div>

        <div style="text-align:right">
            <input type="submit" value="Cập nhật" class="btn btn-primary" />
            <div class="btn btn-outline-dark">
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
        }
    </div>
</div>
