@model AThueSach.Models.OrderPro
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-xxl flex-grow-1 container-p-y">
        <h3>Chi tiết đơn thuê</h3>
        <!--  THÔNG TIN KH-->
        <div class="col-xl-12">
            <div class="card mb-4">
                <h4 class="card-header">Thông tin khách hàng</h4>
                <div class="card-body">
                    <div class="row gy-3">
                        <div class="col-md">
                            <div class="mb-3">
                                <h6>Tên khách hàng</h6>
                                @Html.EditorFor(ModelItem => Model.NameCus,
                                    new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                @*<input type="text"
                                       class="form-control"
                                       placeholder="Tên khách hàng"
                                       name="NameCustomer"
                                       required />*@
                            </div>
                            <div class="col-md">
                                <div>
                                    <div class="col-md-12">
                                        <h6>Ngày thuê sách</h6>
                                        @Html.EditorFor(ModelItem => Model.DateOrder, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="mb-3">
                                <h6>Số điện thoại</h6>
                                @Html.EditorFor(ModelItem => Model.PhoneCus,new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

                                @*<input type="text"
                                       class="form-control"
                                       placeholder="Số điện thoại"
                                       name="PhoneCustomer"
                                       required />*@
                            </div>
                            <div class="col-md">
                                <div>
                                    <h6>Ngày dự kiến trả sách</h6>
                                    <input class="form-control" type="date" value="2021-06-18" id="html5-date-input" />
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--  SÁCH-->
        <div class="card" style="margin-top:2%">
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table class="table table-bordered">
                        
                        <tbody>
                            @Html.Action("Partial_SanPham", "Order", new { id = Model.ID })
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </div>

