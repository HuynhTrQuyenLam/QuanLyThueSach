@model IEnumerable<AThueSach.Models.Product>

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<title>Sách</title>
<div class="card" style="margin: 24px">
    <table style="color: black">
        <thead>
            <tr>
                <th>
                    <h3 class="card-header" style="margin-right: 10%">Danh Sách Sách Thuê</h3>
                </th>
            </tr>
        </thead>
    </table>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-bordered">
                <thead style="text-align:left">
                    <tr>
                        <td> <strong> Tên sách</strong> </td>
                        <td> <strong>Thể loại</strong> </td>
                        <td> <strong>Giá sách</strong> </td>
                        <td> <strong>Giá thuê</strong> </td>
                        <td> </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        decimal price = (decimal)item.Price.Value;

                    <tr style="text-align:left">
                        <td style="width: 200px"> @Html.DisplayFor(modelItem => item.NamePro)</td>
                        <td> @Html.DisplayFor(modelItem => item.Category1.NameCate) </td>
                        <td> @price.ToString("#,##0").Replace(',', '.') đồng</td>
                        <td> @Html.DisplayFor(modelItem => item.Quantity) </td>
                        <td style="text-align:center">
                            @Html.ActionLink("Thuê", "AddToCart", "Order", new { id = item.ProductID }, new { @class = "btn btn-outline-primary" })

                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
